---
const title = "Soul Web Proxy";
import Layout from "../layouts/Layout.astro";
---

<Layout title={title}>
  <main class="bg-primary-500 text-white p-6">
    <h1 class="text-2xl font-bold">{title}</h1>
    <p class="text-base mt-4">
      Welcome to the Soul Web Proxy application with consistent styling and
      great UX.
    </p>
    <div class="mt-6 flex gap-4 sm:flex-col lg:flex-row">
      <div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-lg">
        <div class="text-primary-900 dark:text-primary-50 font-medium">
          Example Card
        </div>
      </div>
      <div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-lg">
        <div class="text-primary-900 dark:text-primary-50 font-medium">
          Another Card
        </div>
      </div>
    </div>
  </main>
</Layout>
